<VirtualHost *:80>

    ServerName <%= @server_name %>

    DocumentRoot <%= @document_root %>

    ErrorLog <%= @logs_dir %>/apache-error.log
    CustomLog <%= @logs_dir %>/apache-access.log common
    #php_value error_log /path/php.log

    <Directory <%= @document_root %>>
        Order allow,deny
        Allow from all
        AllowOverride All
        Options all
    </Directory>

    <Directory <%= @document_root_backend %>>
        Order allow,deny
        Allow from all
        AllowOverride All
        Options all
    </Directory>

    SetEnv YII_DEBUG 1
    SetEnv YII_ENV dev

    AssignUserId vagrant vagrant

</VirtualHost>

<VirtualHost *:443>

    ServerName <%= @server_name %>

    SSLEngine on
    SSLCertificateKeyFile /etc/apache2/ssl/<%= @server_name %>.key
    SSLCertificateFile /etc/apache2/ssl/<%= @server_name %>.cert
    SetEnvIf User-Agent ".*MSIE.*" nokeepalive ssl-unclean-shutdown

    DocumentRoot <%= @document_root %>

    ErrorLog <%= @logs_dir %>/apache-error.log
    CustomLog <%= @logs_dir %>/apache-access.log common
    #php_value error_log /path/php.log

    <Directory <%= @document_root %>>
        Order allow,deny
        Allow from all
        AllowOverride All
        Options all
    </Directory>

    <Directory <%= @document_root_backend %>>
        Order allow,deny
        Allow from all
        AllowOverride All
        Options all
    </Directory>

    AssignUserId vagrant vagrant

    SetEnv YII_DEBUG 1
    SetEnv YII_ENV dev

</VirtualHost>
